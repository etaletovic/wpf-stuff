<UserControl x:Class="WpfNet.Controls.WrapPanelWithOkCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNet.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <local:WrapPanel DockPanel.Dock="Top"></local:WrapPanel>
        <WrapPanel>
            <Button Margin="10" MinWidth="100" MinHeight="40">OK</Button>
            <Button Margin="10" MinWidth="100" MinHeight="40">Cancel</Button>
        </WrapPanel>
    </StackPanel>
</UserControl>
