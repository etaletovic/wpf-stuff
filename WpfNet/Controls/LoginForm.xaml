<UserControl x:Class="WpfNet.Controls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNet"
             mc:Ignorable="d" 
             MinWidth="100"
             MinHeight="300"
             >
    <DockPanel Margin="20" LastChildFill="true">
        <TextBlock DockPanel.Dock="Top" FontSize="32">Contoso</TextBlock>

        <TextBlock DockPanel.Dock="Bottom"
                   TextAlignment="Right"
                   Foreground="Blue"
                   >Forgot your password?</TextBlock>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="10" Padding="10" MinWidth="100">Sign Up</Button>
            <Button Margin="10" Padding="10" MinWidth="100">Login</Button>
        </StackPanel>

        <StackPanel DockPanel.Dock="Left">
            <TextBlock Margin="5">Email:</TextBlock>
            <TextBlock Margin="5">Password:</TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left">
            <TextBox Margin="5"/>
            <PasswordBox Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
